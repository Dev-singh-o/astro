// Blog articles data
const articles = [
  {
    id: 1,
    category: "Categorie",
    title: "Blog post, Lorem ipsum dolor sit amet, consectetur.",
    link: "#",
    image: "images/blogimg.png"
  },
  {
    id: 2,
    category: "Categorie",
    title: "Blog post, Lorem ipsum dolor sit amet, consectetur.",
    link: "#",
    image: "images/blogimg.png"
  },
  {
    id: 3,
    category: "Categorie", 
    title: "Blog post, Lorem ipsum dolor sit amet, consectetur.",
    link: "#",
    image: "images/blogimg.png"
  }
];
---

<section class="bg-gray-50 py-16 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <p class="text-[#2980B9] text-sm font-medium mb-3">Nieuwe artikelen</p>
      <h2 class="text-gray-900 text-3xl md:text-4xl font-bold">
        Inzichten en updates
      </h2>
    </div>

    <!-- Articles Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {articles.map((article) => (
        <article class="bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-lg transition-shadow duration-300 group">
          <!-- Image with gradient overlay -->
          <div class="relative h-48 overflow-hidden">
            {/* <div class="absolute inset-0 bg-gradient-to-br from-blue-400 via-blue-500 to-blue-600"></div> */}
            {/* <div class="absolute inset-0 bg-gradient-to-br from-blue-500/80 to-blue-700/60"></div> */}
            <!-- Optional: Add actual image background -->
            <div class="absolute inset-0 ">
              <img 
                src={article.image} 
                alt="" 
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          
          <!-- Content -->
          <div class="p-6">
            <div class="mb-4 bg-blue-100 w-fit px-3 py-0.5 rounded-full">
              <span class="text-blue-500 text-sm font-medium">{article.category}</span>
            </div>
            
            <h3 class="text-gray-900 text-lg font-semibold leading-tight mb-6">
              {article.title}
            </h3>
            
            <a 
                href={article.link}
                class="inline-flex items-center text-orange-500 font-medium text-sm hover:text-orange-600 transition-all duration-200 group"
                >
                <span class="group-hover:translate-x-1 transition-transform duration-200">
                    Bekijk artikel
                </span>
                <img
                    src="/images/icons/arroorg.png"
                    alt="Arrow icon"
                    class="w-3 h-5 ml-1 object-contain group-hover:translate-x-1 transition-transform duration-200"
                />
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- View All Button -->
    <div class="text-center">
      <button class="inline-flex items-center px-6 py-3 border-2 border-orange-500 text-orange-500 font-medium rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg group">
        Bekijk alle artikelen
        <img
            src="/images/icons/arroorg.png"
            alt="Arrow icon"
            class="w-4 h-4 ml-1 object-contain group-hover:translate-x-1 transition-transform duration-200"
        />
      </button>
    </div>
  </div>
</section>