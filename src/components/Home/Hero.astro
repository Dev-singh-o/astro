---

<!-- Hero Section Component -->
<section
  class="relative mt-9 bg-gradient-to-r from-[#3b80b6] to-[#58bcff] overflow-hidden"
>
  <!-- Main Content Container -->
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <!-- Left Content: Text and CTA -->
      <div class="text-white">
        <h1
          class="mb-8 text-4xl font-semibold leading-tight md:text-5xl lg:text-7xl"
        >
          Goed werkende website nodig?
        </h1>

        <!-- Key Points List -->
        <div class="mt-10 mb-10 space-y-4">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div
                class="flex h-6 w-6 items-center justify-center rounded-full"
              >
                <img
                  src="/images/icons/tick.png"
                  alt="Tick icon"
                  class="h-full w-full object-none"
                />
              </div>
            </div>
            <span class="text-lg font-medium">50+ tevreden klanten</span>
          </div>

          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div
                class="flex h-6 w-6 items-center justify-center rounded-full"
              >
                <img
                  src="/images/icons/tick.png"
                  alt="Tick icon"
                  class="h-full w-full object-none"
                />
              </div>
            </div>
            <span class="text-lg font-medium">Meer dan 6 jaar ervaring</span>
          </div>

          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div
                class="flex h-6 w-6 items-center justify-center rounded-full"
              >
                <img
                  src="/images/icons/tick.png"
                  alt="Tick icon"
                  class="h-full w-full object-none"
                />
              </div>
            </div>
            <span class="text-lg font-medium"
              >Klantwaardering van 4.8 / 5 sterren</span
            >
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col gap-4 sm:flex-row">
          <a
            href="/contact"
            class="flex items-center justify-center rounded-lg bg-orange-500 px-8 py-4 text-lg font-semibold text-white transition-colors duration-200 hover:bg-orange-600 group"
          >
            Neem contact op
            <img
              src="/images/icons/arrow.png"
              alt="Arrow icon"
              class="w-4 h-4 ml-1 object-contain group-hover:translate-x-1 transition-transform duration-200"
            />
          </a>

          <a
            href="/diensten"
            class="flex items-center justify-center rounded-lg border-2 border-white px-8 py-4 text-lg font-semibold text-white transition-colors duration-200 group"
          >
            Bekijk Diensten
            <img
              src="/images/icons/arrow.png"
              alt="Arrow icon"
              class="w-4 h-4 ml-1 object-contain group-hover:translate-x-1 transition-transform duration-200"
            />
          </a>
        </div>
      </div>

      <!-- Right Content: Website Mockups -->
      <div class="relative flex h-full flex-col items-end justify-center">
        <!-- Decorative Background Circles -->
        <div class="absolute inset-0">
          <div
            class="absolute -top-4 right-0 h-124 w-124 rounded-full border border-gray-300"
          >
          </div>
          <div
            class="absolute top-8 right-12 h-100 w-100 rounded-full border border-gray-100"
          >
          </div>
          <div
            class="absolute top-16 right-20 h-80 w-80 rounded-full border border-gray-50"
          >
          </div>
        </div>

        <!-- Desktop Website Mockup -->
        <div class="relative w-full max-w-md overflow-hidden rounded-lg">
          <img
            src="/images/desktop.png"
            alt="Desktop website mockup"
            class="w-full object-contain transition-transform duration-300"
          />
        </div>

        <!-- Mobile Website Mockup -->
        <div
          class="absolute bottom-2 left-24 transition-transform duration-500 hover:rotate-0"
        >
          <img
            src="/images/phone.png"
            alt="Phone website mockup"
            class="w-44 object-contain transition-transform duration-300"
          />
        </div>
      </div>
    </div>
  </div>
</section>
