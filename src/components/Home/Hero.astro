---
// HeroSection.astro
---

<section
  class="relative bg-gradient-to-r mt-9 from-[#3b80b6] to-[#58bcff] overflow-hidden"
>
  <!-- Decorative Background Elements -->

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="text-white">
        <h1
          class="text-4xl md:text-5xl lg:text-7xl font-semibold leading-tight mb-8"
        >
          Goed werkende website nodig?
        </h1>

        <!-- Key Points -->
        <div class="space-y-4 mt-10 mb-10">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div
                class="w-6 h-6 rounded-full flex items-center justify-center"
              >
                <img
                  src="/images/icons/tick.png"
                  alt=" tick icon"
                  class="w-full h-full object-none"
                />
              </div>
            </div>
            <span class="text-lg font-medium">50+ tevreden klanten</span>
          </div>

          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div
                class="w-6 h-6 rounded-full flex items-center justify-center"
              >
                <img
                  src="/images/icons/tick.png"
                  alt=" tick icon"
                  class="w-full h-full object-none"
                />
              </div>
            </div>
            <span class="text-lg font-medium">Meer dan 6 jaar ervaring</span>
          </div>

          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div
                class="w-6 h-6 rounded-full flex items-center justify-center"
              >
                <img
                  src="/images/icons/tick.png"
                  alt=" tick icon"
                  class="w-full h-full object-none"
                />
              </div>
            </div>
            <span class="text-lg font-medium"
              >Klantwaardering van 4.8 / 5 sterren</span
            >
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/contact"
            class="bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200 flex items-center justify-center group"
          >
            Neem contact op
            <img
              src="/images/icons/arrow.png"
              alt=" tick icon"
              class="w-6 pl-1 h-full object-none"
            />
          </a>

          <a
            href="/diensten"
            class="border-2 border-white text-white hover:bg-white hover:text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200 flex items-center justify-center group"
          >
            Bekijk Diensten
            <img
              src="/images/icons/arrow.png"
              alt=" tick icon"
              class="w-6 pl-1 h-full object-none"
            />
          </a>
        </div>
      </div>

      <!-- Right Content - Website Mockups -->
      <div class="flex flex-col items-end justify-center relative h-full">
        <div class="absolute inset-0">
          <div
            class="absolute -top-4 right-0 w-124 h-124 border border-gray-300 rounded-full"
          >
          </div>
          <div
            class="absolute top-8 right-12 w-100 h-100 border border-gray-100 rounded-full"
          >
          </div>
          <div
            class="absolute top-16 right-20 w-80 h-80 border border-gray-50 rounded-full"
          >
          </div>
        </div>

        <!-- Desktop Website Mockup -->
        <div class="relative rounded-lg overflow-hidden w-full max-w-md">
          <img
            src="/images/desktop.png"
            alt="desktop website mockup"
            class="w-full object-contain transition-transform duration-300"
          />
        </div>
        <!-- Mobile Website Mockup -->
        <div
          class="absolute bottom-2 left-24 transform hover:rotate-0 transition-transform duration-500"
        >
          <img
            src="/images/phone.png"
            alt="phone website mockup"
            class="w-44 object-contain transition-transform duration-300"
          />
        </div>
      </div>
    </div>
  </div>
</section>
