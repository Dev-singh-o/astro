        </div>
      </div>

      <!-- Contact Button -->
      <div class="hidden md:block">
        <a
          href="/contact"
          class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-md text-sm font-medium transition-all duration-300 flex items-center shadow hover:shadow-lg"
        >
          Neem contact op
          <svg
            class="ml-2 w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
